{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "oscarotero/env": "^1.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wp-sync-db/wp-sync-db": "dev-master@dev",
    "wp-sync-db/wp-sync-db-media-files": "dev-master",
    "wpackagist-plugin/flamingo": "1.5",
    "wpackagist-plugin/disqus-comment-system": "2.86",
    "wpackagist-plugin/jetpack": "4.7.1",
    "wpackagist-plugin/tinymce-advanced": "4.4.3",
    "wpackagist-plugin/wp-sweep": "1.0.10",
    "wpackagist-plugin/all-in-one-seo-pack": "2.3.12.1",
    "wpackagist-plugin/wp-super-cache": "1.4.9",
    "wpackagist-plugin/media-library-plus": "3.2.7",
    "wpackagist-plugin/co-authors-plus": "3.2.1",
    "wpackagist-plugin/autoset-featured-image": "1.2.2",
    "wpackagist-plugin/akismet": "3.3",
    "wpackagist-plugin/add-multiple-users": "2.0.0",
    "wpackagist-plugin/contact-form-7": "4.7",
    "wpackagist-plugin/really-simple-captcha": "1.9",
    "wpackagist-plugin/simple-share-buttons-adder": "6.3.4",
    "wpackagist-plugin/wp-dbmanager": "2.78.1",
    "wpackagist-plugin/update-control": "1.5",
    "wpackagist-plugin/wp-maintenance-mode": "2.0.9",
    "wpackagist-plugin/manual-image-crop": "1.12",
    "wpackagist-plugin/add-logo-to-admin": "1.6.2",
    "wpackagist-plugin/advanced-excerpt": "4.2.3",
    "wpackagist-plugin/change-permalink-helper": "1.0.0",
    "wpackagist-plugin/force-regenerate-thumbnails": "2.0.6",
    "wpackagist-plugin/bwp-google-xml-sitemaps": "1.4.1",
    "johnpbloch/wordpress": "4.8.0",
    "wpackagist-plugin/nextgen-gallery": "2.2.3",
    "wpackagist-plugin/redirection": "2.6.5"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --ignore=web/wp/,vendor/ -n -s ."
    ]
  }
}
